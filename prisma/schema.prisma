generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  firebaseId String   @unique
  email      String   @unique
  name       String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Auditor {
  id             String   @id @default(uuid())
  firebaseId     String   @unique
  email          String   @unique
  name           String
  firmName       String
  licenseNumber  String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
